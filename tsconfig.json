{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext", 
		"moduleResolution": "NodeNext", 
		"outDir": "./backend/dist", 
		"rootDir": "./backend",
		"strict": true,
		"esModuleInterop": true, 
		"skipLibCheck": true ,
		"types": [
			"node",
			"express",
			"bcryptjs",
			"cookie-parser",
			"jsonwebtoken",
			"multer",
			"nodemailer"
		]
	},
	"ts-node": {
		"esm": true
	},
	"include": ["backend/src/**/*"], 
	"exclude": ["node_modules", "**/*.spec.ts", "frontend"] 
}